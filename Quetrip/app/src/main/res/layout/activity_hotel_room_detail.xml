<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.HotelRoomDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1">

            ​<com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:background="@null">
                ​
                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsing"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:expandedTitleMarginStart="30dp"
                    app:expandedTitleMarginEnd="30dp"
                    app:expandedTitleTextAppearance="@style/CollapsingTextAppearance.Inverse"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed"
                    app:contentScrim="?colorPrimary">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_collapseMode="parallax"
                        tools:ignore="ContentDescription">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="#FAFAFA">

                            <androidx.viewpager.widget.ViewPager
                                android:id="@+id/viewPager"
                                android:layout_width="match_parent"
                                android:layout_height="0px"
                                android:layout_weight="1"/>

                        </LinearLayout>

                        <com.viewpagerindicator.LinePageIndicator
                            android:id="@+id/indicator"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_gravity="bottom"
                            android:layout_marginBottom="2dp"
                            app:strokeWidth="3dp"
                            app:unselectedColor="@color/gray"
                            app:selectedColor="@color/colorPrimary"/>

                        <com.github.mmin18.widget.RealtimeBlurView
                            android:id="@+id/real_time_blur_view"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fitsSystemWindows="true"
                            app:realtimeBlurRadius="20dp"
                            android:visibility="gone"
                            app:realtimeOverlayColor="@android:color/transparent" />

                    </FrameLayout>

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@null"
                        style="@style/ToolBarWithNavigationBack3"
                        android:layout_marginTop="20dp"
                        android:visibility="visible"
                        app:layout_collapseMode="pin">

                    </androidx.appcompat.widget.Toolbar>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="2dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <androidx.cardview.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/flexible.example.cardview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp"
                    android:layout_margin="5dp">

                    <LinearLayout
                        android:id="@+id/layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        app:layout_scrollFlags="scroll">

                        <TextView
                            android:id="@+id/priceBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/text"
                            android:textStyle="bold"
                            android:textSize="22sp"
                            android:fontFamily="sans-serif-condensed"
                            android:text="52 USD"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_bed"
                                    />

                                <TextView
                                    android:id="@+id/bedBox"
                                    android:layout_width="0px"
                                    android:layout_weight="1"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:fontFamily="sans-serif-condensed"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="16sp"
                                    android:textColor="@color/text"
                                    android:layout_marginLeft="5dp"
                                    android:text="1 King Bed OR 2 Twin Beds"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/viewLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_city"
                                    />

                                <TextView
                                    android:id="@+id/viewBox"
                                    android:layout_width="0px"
                                    android:layout_weight="1"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:fontFamily="sans-serif-condensed"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="16sp"
                                    android:textColor="@color/text"
                                    android:layout_marginLeft="5dp"
                                    android:text="City View"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/ic_sleeps"
                                    />

                                <TextView
                                    android:id="@+id/sleepsBox"
                                    android:layout_width="wrap_content"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:fontFamily="sans-serif-condensed"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="16sp"
                                    android:textColor="@color/text"
                                    android:layout_marginLeft="5dp"
                                    android:text="Sleeps Max. 2"/>

                                <TextView
                                    android:id="@+id/adultsBox"
                                    android:layout_width="wrap_content"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:fontFamily="sans-serif-condensed"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="14sp"
                                    android:textColor="@color/text"
                                    android:layout_marginLeft="20dp"
                                    android:text="Adults 2"/>

                                <TextView
                                    android:id="@+id/childrenBox"
                                    android:layout_width="wrap_content"
                                    android:singleLine="true"
                                    android:ellipsize="end"
                                    android:fontFamily="sans-serif-condensed"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="14sp"
                                    android:textColor="@color/text"
                                    android:layout_marginLeft="20dp"
                                    android:text="Children 1"/>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/refundableBox"
                                android:layout_width="match_parent"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:fontFamily="sans-serif-condensed"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="5dp"
                                android:textSize="16sp"
                                android:textColor="@color/text"
                                android:text="Free Cancellation"/>

                        </LinearLayout>

                        <com.google.android.flexbox.FlexboxLayout
                            android:id="@+id/servicesLayout"
                            android:layout_marginTop="20dp"
                            app:flexWrap="wrap"
                            app:alignItems="stretch"
                            app:alignContent="stretch"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent">
                        </com.google.android.flexbox.FlexboxLayout>


                        <com.abdulhakeem.seemoretextview.SeeMoreTextView
                            android:id="@+id/descriptionBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:layout_marginTop="20dp"
                            android:text="@string/room_desc"
                            android:textColor="@color/text"
                            android:textSize="16sp"
                            android:lineSpacingExtra="8dp"
                            android:fontFamily="sans-serif-condensed-light"/>
                        ​
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.core.widget.NestedScrollView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_sel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:src="@drawable/ic_checked"
                android:tint="@color/colorPrimary"
                app:backgroundTint="@color/white"
                app:layout_anchor="@id/flexible.example.cardview"
                app:layout_anchorGravity="top|right|end"/>

        </androidx.coordinatorlayout.widget.CoordinatorLayout>

    </LinearLayout>


</FrameLayout>




















