<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="12dp"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0px"
            android:layout_weight="0.8"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="3dp"
            android:layout_height="100dp">

            <ImageView
                android:id="@+id/pictureBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/restaurant"
                android:scaleType="centerCrop"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameBox"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-condensed"
                android:textColor="@color/text"
                android:text="Marcel Restaurant"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/text"
                    android:text="@string/city_"/>

                <TextView
                    android:id="@+id/cityNameBox"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/text"
                    android:layout_marginLeft="3dp"
                    android:text="Sao Paulo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/text"
                    android:text="@string/distance_"/>

                <TextView
                    android:id="@+id/distanceBox"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/text"
                    android:layout_marginLeft="3dp"
                    android:text="4km"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-condensed"
                    android:textColor="@color/text"
                    android:text="@string/status_"/>

                <TextView
                    android:id="@+id/statusBox"
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="@color/green"
                    android:layout_marginLeft="3dp"
                    android:text="Open Now"/>

            </LinearLayout>

            <TextView
                android:id="@+id/menuBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:fontFamily="sans-serif-condensed"
                android:layout_gravity="center_vertical"
                android:textSize="14sp"
                android:textColor="@color/text"
                android:text="Tropical Pizza"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="@string/restaurant_desc"
                android:singleLine="true"
                android:visibility="visible"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/read_more"
        android:gravity="right"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"
        android:padding="3dp"
        android:visibility="gone"
        android:drawableRight="@drawable/ic_right"/>

</LinearLayout>

























